CREATE DATABASE [Biblioteka]
GO
USE [Biblioteka]
GO
CREATE TABLE [dbo].[Books]
(
	[Id] INT NOT NULL CONSTRAINT [PK_Books_Id] PRIMARY KEY IDENTITY,
	[NAME] NVARCHAR(128) NOT NULL,
	[AUTHOR] NVARCHAR(128) NOT NULL,
)
GO
CREATE TABLE [dbo].[People]
(
	[Id] INT NOT NULL CONSTRAINT [PK_People_Id] PRIMARY KEY IDENTITY,
	[Name] NVARCHAR(128) NOT NULL,
	[Surname] NVARCHAR(128) NOT NULL,
	[MailAddress] NVARCHAR(256) NULL,
	[IsAccountLocked] BIT NOT NULL,
)
GO
CREATE TABLE [dbo].[BookBorrowings]
(
	[Id] INT NOT NULL CONSTRAINT [PK_BookBorrowings_Id] PRIMARY KEY IDENTITY,
	[BookId] INT NOT NULL,
	[PeopleId] INT NOT NULL,
	[BooksId] INT CONSTRAINT [FK_Books_Id] FOREIGN KEY REFERENCES [dbo].[Books]([Id]) NOT NULL,
	[PeopleeId] INT CONSTRAINT [FK_Peoplee_Id] FOREIGN KEY REFERENCES [dbo].[People]([Id]) NOT NULL
)
